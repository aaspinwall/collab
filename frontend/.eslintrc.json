{
  "plugins": ["react", "react-hooks", "jsx-a11y"],
  "extends": [
    "plugin:react/recommended",
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "globals": {
    "expect": true
  },
  "settings": {
    "react": {
      "version": "16.8"
    }
  },
  "rules": {
    "react/react-in-jsx-scope": "off"
  }
}
